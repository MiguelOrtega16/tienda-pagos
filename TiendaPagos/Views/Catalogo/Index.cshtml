@model TiendaPagos.Models.Catalogo.ProductosIndexModel

<div class="container">

    <div class="row">

        @*<div class="col-lg-3">

            <h1 class="my-4">Ventas Memé - Catálogo de Productos</h1>
            <div class="list-group">
                @foreach (var categorias in Model.Categorias)
                {
                    <a href="#" class="list-group-item">@categorias.Nombre</a>
                }
            </div>

        </div>*@
        <!-- /.col-lg-3 -->

        <div class="col-lg-12">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item item active">
                        <img class="d-block img-fluid img-index w-100" src="~/images/CatalogoIndex/Slide1.jpg" alt="Primer slide">
                    </div>
                    <div class="carousel-item item">
                        <img class="d-block img-fluid img-index w-100" src="~/images/CatalogoIndex/Slide2.jpg" alt="Segundo slide">
                    </div>
                    <div class="carousel-item item">
                        <img class="d-block img-fluid img-index w-100" src="~/images/CatalogoIndex/Slide3.jpg" alt="Tercer slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Siguiente</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                </a>
            </div>

            <div class="row">
                @foreach (var producto in Model.Productos)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a asp-controller="Catalogo" asp-action="Detail" asp-route-id="@producto.Id">
                                <img src="@producto.UrlImagen" class="card-img-top" />
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@producto.NombreProducto</a>
                                </h4>
                                <h5>$@producto.Costo</h5>
                                <p class="card-text"><strong>Estado: </strong>@producto.Estado</p>
                                <p class="card-text"><strong>Cantidad: </strong>@producto.CantidadProductos</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>